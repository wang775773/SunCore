<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chart_main_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        >

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/weatherBtn_bg"
            android:layout_weight="2"
            
            />

        <EditText
            android:id="@+id/device_no"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edittext"
            android:ems="10" 
            android:layout_weight="3"
            />

            
      

        <Button
            android:id="@+id/check_device_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search"
            android:layout_gravity="right"
            android:textColor="#ecf4ff"
            android:textSize="20sp"
            android:layout_weight="0.5" />
    </LinearLayout>
    
    <ListView
        android:id="@+id/check_device_result" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:cacheColorHint="#eee"/>

</LinearLayout>